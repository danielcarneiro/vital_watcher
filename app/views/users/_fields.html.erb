<%= render 'shared/error_messages', :object => f.object %>

<div class="field">
  <%= f.label :display_name %><br />
  <%= f.text_field :display_name %>
</div>
<div class="field">
  <%= f.label :login %><br />
  <%= f.text_field :login %>
</div>
<div class="field">
  <%= f.label :password %><br />
  <%= f.password_field :password %>
</div>
<div class="field">
  <%= f.label :password_confirmation, "Confirmation" %><br />
  <%= f.password_field :password_confirmation %>
</div>
<div class="field">
  <%= f.label :email %><br />
  <%= f.text_field :email %>
</div>
<div class="field">
  <%= f.label :birth_date %><br />
  <%= f.date_select :birth_date, 
        :order => [:day, :month, :year], 
        :start_year => Time.now.year - 100,
        :end_date => Time.now.year %>
</div>
<div class="field">
  <%= f.label :gender_id %><br />
  <%= f.collection_select :gender_id, Gender.all, :id, :name, :prompt => 'Choose one' %>
</div>

