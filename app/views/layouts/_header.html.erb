<header>
	<%= link_to logo, root_path %>
	<nav class="round">
	  <ul>
			<li><%= link_to "Home", root_path %></li>
			<li><%= link_to "Users", users_path %></li>
			<li><%= link_to "Heart Rates", heart_rate_types_path %></li>
			<% if signed_in? %>
      			<li><%= link_to "Sign out, #{current_user.display_name}", signout_path, :method => :delete %></li>
      		<% else %>
      			<li><%= link_to "Sign in", signin_path %></li>
     		<% end %>
	  </ul>
  </nav>
</header>