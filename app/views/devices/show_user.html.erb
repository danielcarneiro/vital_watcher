<%= render 'shared/user_header' %>

<strong>Devices</strong><br />

<% if @user.devices.empty? %>
	No devices associated<br />
<% else %>
	<table class="devices" summary="User devices">
		<%= render @devices %>
	</table>
<% end %>

<% if current_user?(@user) %>
	<%= link_to "Add a device", new_device_path %><br />
<% end %>

